set nu 
set ts=4  
set expandtab  
set ignorecase	
set hlsearch  
set background=dark 
set title 
set showmatch	
set history=2  

syntax on  

set runtimepath+=~/.vim/

call plug#begin('~/.vim/plugged')
Plug 'https://github.com/ctrlpvim/ctrlp.vim.git',
Plug 'https://tpope.io/vim/fugitive.git',
call plug#end()
